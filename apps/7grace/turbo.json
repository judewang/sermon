{
	"$schema": "https://turbo.build/schema.json",
	"extends": ["//"],
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"build": {
			"env": [
				"KV_REST_API_READ_ONLY_TOKEN",
				"KV_REST_API_TOKEN",
				"KV_REST_API_URL",
				"KV_URL",
				"API_KEY"
			],
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**"]
		}
	}
}
